<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="calificaciones.Views.Login"
             Title="Login">
    <VerticalStackLayout 
                         Spacing="20"
                         Padding="20">
        <Image Source="account.png"
               MaximumWidthRequest="150"></Image>

        <Entry x:Name="TxtUsuario"
                   Placeholder="Usuario"
                   Keyboard="Text"
                   MaxLength="10"></Entry>
        <Entry x:Name="TxtPassword"
                   Placeholder="Password"
                   IsPassword="True"
                   MaxLength="10"></Entry>
        <Button x:Name="BtnIniciar"
                
                    Clicked="BtnIniciar_Clicked"
                    Text="Login"></Button>



    </VerticalStackLayout>
</ContentPage>