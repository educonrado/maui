<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="econradoS5B.Views.vPrincipal"
             Title="vPrincipal">
    <ScrollView>
        <VerticalStackLayout Spacing="20"
                         Padding="20">
            <Label 
            Text="Semana 5 SQLite"
            FontSize="20"
            TextColor="DarkBlue"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
            <Entry x:Name="txtNombre"
                    Placeholder="Ingrese su nombre"
                    MaxLength="25"></Entry>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
                <Button x:Name="btnRegistrar"
                        Text="Registrar"
                        Clicked="btnRegistrar_Clicked"
                        Grid.Column="0"
                        Grid.Row="0"></Button>
                <Label x:Name="lblStatus"
                       Grid.Column="0"
                       Grid.Row="1"/>
                <Button x:Name="btnListar"
                        Text="Listar personas"
                        Clicked="btnListar_Clicked"
                        Grid.Column="0"
                        Grid.Row="2"></Button>
                <CollectionView x:Name="listaPersona"
                                Grid.Column="0"
                                Grid.Row="3"
                                HorizontalOptions="Center"
                                MaximumWidthRequest="200">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Label Text="{Binding Id}"
                                       Grid.Column="0"/>
                                <Label Text="{Binding Name}"
                                        Grid.Column="1"/>
                                <Button x:Name="btnEditar"
                                        Text="Editar"
                                        Clicked="btnEditar_Clicked"
                                        Grid.Column="2"></Button>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>


        </VerticalStackLayout>
    </ScrollView>
</ContentPage>