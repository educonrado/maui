<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="econradoS6B.Views.Usuarios"
             Title="Usuarios">
    <ScrollView>
        <VerticalStackLayout Spacing="10"
                             Padding="10">
            <Label 
            Text="Usuarios"
            FontSize="Title"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

            <Grid ColumnSpacing="5" Padding="10" Margin="10" BackgroundColor="#33cc33">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Text="Nombre"
                       Grid.Column="0"
                       FontAttributes="Bold"
                       TextColor="#333333"
                       VerticalOptions="Center" />
                <Label Text="Apellido"
                       Grid.Column="1"
                       FontAttributes="Bold"
                       TextColor="#333333"
                       VerticalOptions="Center" />
                <Label Text="Edad"
                       Grid.Column="2"
                       FontAttributes="Bold"
                       TextColor="#333333"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />
                <Label Text="Acciones"
                       Grid.Column="3"
                       FontAttributes="Bold"
                       TextColor="#333333"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />
            </Grid>
            <ListView x:Name="listUsuarios"
                      SeparatorVisibility="Default"
                      SeparatorColor="#DDDDDD"
                      HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid ColumnSpacing="5" Padding="10,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Label Text="{Binding Nombre}"
                                       Grid.Column="0"
                                       VerticalOptions="Center" />
                                <Label Text="{Binding Apellido}"
                                       Grid.Column="1"
                                       VerticalOptions="Center" />
                                <Label Text="{Binding Edad}"
                                       Grid.Column="2"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                                <Button Text="x"
                                        Grid.Column="3"
                                        x:Name="btnEliminar"
                                        Clicked="btnEliminar_Clicked"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center"
                                        ToolTipProperties.Text="Eliminar"
                                        WidthRequest="50"></Button>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>